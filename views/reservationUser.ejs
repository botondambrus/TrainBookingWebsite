<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Railway company</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link " href="/">Search</a>
                </li>
                <% if ( role==='admin' ) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/addition">Addition</a>
                    </li>
                    <% } %>
                        <% if (role !=='guest' ) { %>
                            <li class="nav-item">
                                <a class="nav-link active" href="/reservation/user">My reservations</a>
                            </li>
                            <% } %>
            </ul>
            <ul class="navbar-nav ms-auto">
                <% if (role==='guest' ) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/registration">Registration</a>
                    </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link">
                                User: <%= username %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/logout">Logout</a>
                        </li>
                        <% } %>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <% if (query && query==='success' ) { %>
            <div class="alert alert-success" role="alert">
                Successful reservation!
            </div>
            <% } else if (query && query==='error' ) { %>
                <div class="alert alert-danger" role="alert">
                    Unsuccessful reservation! <%= message %>
                </div>
                <% } else if (query && query==='successModification' ) { %>
                    <div class="alert alert-success" role="alert">
                        Successful modification!
                    </div>
                    <% } else if (query && query==='errorModification' ) { %>
                        <div class="alert alert-danger" role="alert">
                            Unsuccessful modification! <%= message %>
                        </div>
                        <% } %>
                            <br>
                            <div class="text-center mb-3">
                                <h3>
                                    <%= username %>'s reservations
                                </h3>
                                <br>
                            </div>
                            <table class="table table-striped text-center">
                                <thead>
                                    <tr>
                                        <th>Train number</th>
                                        <th>Date</th>
                                        <th>Departure</th>
                                        <th>Arrival</th>
                                        <th>Departure time</th>
                                        <th>Arrival time</th>
                                        <th>Day</th>
                                        <th>Type</th>
                                        <th>Price</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% reservations.forEach(function(reservation){ %>
                                        <tr id="reservationRow<%= reservation.id %>">
                                            <td>
                                                <%= reservation.trainId %>
                                            <td>
                                                <%=reservation.date.toLocaleDateString('en-US') %>
                                            </td>
                                            <td>
                                                <%= reservation.departure %>
                                            </td>
                                            <td>
                                                <%= reservation.arrival %>
                                            </td>
                                            <td>
                                                <%= reservation.departureTime %>
                                            </td>
                                            <td>
                                                <%= reservation.arrivalTime %>
                                            </td>
                                            <td>
                                                <%= reservation.day %>
                                            </td>
                                            <td>
                                                <%= reservation.type %>
                                            </td>
                                            <td>
                                                <%= reservation.price %>
                                            </td>

                                            <td>
                                            <td>
                                                <a href="/modification/<%=reservation.id %>"
                                                    class="btn btn-outline-dark">Modify</a>
                                            </td>
                                            </td>
                                            <td>
                                                <button type="button"
                                                    class="btn btn-outline-danger deleteReservationButton"
                                                    data-reservation-id="<%= reservation.id %>">Delete</button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
    </div>
    <script src="/deleteReservation.js"></script>
</body>

</html>